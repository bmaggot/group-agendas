<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/calendar_agenda_entry"
	android:layout_marginTop="2dp"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
	<ImageView android:id="@+id/agenda_entry_icon_placeholder"
	    android:contentDescription="Placeholder for event's bubble."
	    android:src="@null"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical|left" />
	
	<TextView android:id="@+id/agenda_entry_title_placeholder"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical|left"
	    android:paddingLeft="5dp"
	    android:paddingTop="2dp"
	    android:paddingBottom="2dp"
	    android:textStyle="normal"
	    android:textColor="@color/black"
	    android:textSize="10dp" />
</LinearLayout>