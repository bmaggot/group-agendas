<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp"
	android:layout_width="fill_parent"
	android:gravity="center_vertical"
	android:background="@drawable/calendar_navbar_background">

    	<ImageButton android:id="@+id/prevDay"
    	    android:background="@null"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/left"
			android:contentDescription="@string/calendar_dayView_navigateLeft"/>

		<LinearLayout
		    android:layout_centerInParent="true"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_centerVertical="true"
			android:orientation="vertical" >
		    
   			<TextView
				android:id="@+id/top_panel_title"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:gravity="top"
   			    android:text="Wednesday, July 18, 2012"
				android:textColor="#3B4959"
				android:textSize="18dp"
				android:textStyle="bold" />
		</LinearLayout>
		
    	<ImageButton android:id="@+id/nextDay"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
    	    android:background="@null"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="15dp"
			android:gravity="center_vertical"
			android:src="@drawable/right"
			android:contentDescription="@string/calendar_dayView_navigateRight"/>

</RelativeLayout>