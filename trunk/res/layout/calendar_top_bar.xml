<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="30dp" android:layout_gravity="center_horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    	<ImageButton android:id="@+id/prevDay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:gravity="center_vertical"
			android:src="@drawable/left"
			android:contentDescription="@string/calendar_dayView_navigateLeft"/>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:gravity="center_horizontal">
		    
   			<TextView
				android:id="@+id/top_panel_title"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:gravity="center_vertical"
				android:text=""
				android:textColor="@color/event_color_start"
				android:textStyle="bold" />
		</LinearLayout>
		
    	<ImageButton android:id="@+id/nextDay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:gravity="center_vertical"
			android:src="@drawable/right"
			android:contentDescription="@string/calendar_dayView_navigateRight"/>

</LinearLayout>