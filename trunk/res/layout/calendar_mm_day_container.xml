<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/calendar_agenda_day_container"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical">
	
    <LinearLayout android:layout_gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
    <TextView android:id="@+id/agenda_week_title"
        android:background="@color/lighter_gray"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingBottom="3dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:visibility="visible" />

    <TextView android:id="@+id/agenda_day_title"
        android:background="@color/lighter_gray"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:shadowColor="@color/black"
        android:shadowRadius="1.5"
        android:shadowDx="0"
        android:shadowDy="2"
        android:textStyle="bold"
        android:textColor="#3B4959"
        android:textSize="12dp" />
    </LinearLayout>

    <ListView android:id="@+id/agenda_day_entries"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:divider="@null"
        android:dividerHeight="0dp" />
</LinearLayout>