<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:cacheColorHint="#00000000"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/calendar_agenda_entry" >
    
    <ImageView android:id="@+id/month_entry_color_placeholder"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:contentDescription="@string/event_color_placeholder"
        android:src="@null" />
    
    <LinearLayout android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        
	   	<TextView android:id="@+id/month_entry_start"
		    android:layout_marginTop="2dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="2dp"
		    android:paddingBottom="0dp"
		    android:gravity="center"
		    android:text=""
		    android:textStyle="normal"
		    android:textColor="@color/black"
		    android:textSize="13sp" />
	   	
	   	<TextView android:id="@+id/month_entry_end"
		    android:layout_marginTop="0dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="3dp"
		    android:gravity="center"
		    android:text=""
		    android:textStyle="normal"
		    android:textColor="@color/black"
		    android:textSize="13sp" />	   	
    </LinearLayout>

    <ImageView android:id="@+id/month_entry_icon_placeholder"
        android:layout_marginLeft="5dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/event_icons_placeholder"
        android:layout_margin="3dp"
        android:src="@null" />
    
   	<TextView android:id="@+id/month_entry_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:paddingLeft="5dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:text=""
		android:textStyle="bold"
		android:textColor="@color/black"
		android:textSize="16sp"/>
   	
</LinearLayout>