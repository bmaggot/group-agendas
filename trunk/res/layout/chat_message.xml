<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:focusable="false"
        android:orientation="horizontal" >

    <View android:id="@+id/kubiks"
        android:layout_height="1dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:visibility="gone" />

    <LinearLayout android:layout_weight="8"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical">

        <TextView android:id="@+id/chat_message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/chat_message_body" />

        <TextView android:id="@+id/chat_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/chat_message_time" />
    </LinearLayout>

</LinearLayout>