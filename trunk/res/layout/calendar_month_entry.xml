<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:cacheColorHint="#00000000"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/calendar_agenda_entry" >
    
    <LinearLayout android:orientation="vertical"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        
	   	<TextView android:id="@+id/month_entry_start"
		    android:layout_marginTop="2dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingTop="2dp"
		    android:paddingBottom="2dp"
		    android:text="08:00"
		    android:textStyle="normal"
		    android:textColor="@color/black"
		    android:textSize="10dp" />
	   	
	   	<TextView android:id="@+id/month_entry_end"
		    android:layout_marginTop="2dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingTop="2dp"
		    android:paddingBottom="2dp"
		    android:text="10:00"
		    android:textStyle="normal"
		    android:textColor="@color/black"
		    android:textSize="10dp" />	   	
    </LinearLayout>

    <ImageView android:id="@+id/month_entry_icon_placeholder"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Placeholder for event's bubble."
        android:layout_margin="3dp"
        android:src="@null" />
    
   	<TextView android:id="@+id/month_entry_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:paddingLeft="5dp"
		android:paddingTop="2dp"
		android:paddingBottom="2dp"
		android:text="month's event"
		android:textStyle="bold"
		android:textColor="@color/black"
		android:textSize="14dp"/>
   	
</LinearLayout>