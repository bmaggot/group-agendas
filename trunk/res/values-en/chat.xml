<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="chat_deleted_message">Removed message</string>

    <style name="chat_deleted_message_style">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="chat_message_body">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="chat_message_time">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="chat_message_from_who">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="chat_message_top_bar_buttons">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="chat_thread_time">
        <item name="android:textColor">@color/lighter_blue</item>
        <item name="android:textSize">18dp</item>
    </style>
    
    <style name="chat_thread_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="chat_thread_last_message">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textSize">16dp</item>
    </style>
    
    <style name="chat_thread_message_count">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
    </style>
    
    <style name="chat_message_send_button">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>